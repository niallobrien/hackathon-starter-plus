doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='theme-color' content='#4DA5F4')
    meta(name='csrf-token', content=_csrf)
    title #{title} - Hackathon Starter Plus
    link(rel='shortcut icon', href=fullHostname + '/favicon.png')
    :mix(css) '/assets/styles/app.css'
  body
    include partials/header

    .container
      include partials/flash
      block content

    include partials/footer

    :mix(js) '/assets/scripts/manifest.js'
    :mix(js) '/assets/scripts/vendor.js'
    script(type='text/javascript', src=hostname + ':3001/socket.io/socket.io.js')
    :mix(js) '/assets/scripts/app.js'

