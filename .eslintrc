// Enforce Standard JS style guide
{
  "extends": "standard",
  "globals": {
    "jQuery": true,
    "$": true
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "plugins": [
    "chai-friendly"
  ],
  "rules": {
    "comma-dangle": 0,
    "consistent-return": 0,
    "function-paren-newline": [
      "error",
      "never"
    ],
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "no-shadow": 0,
    "no-console": 0,
    "no-plusplus": 0,
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2
  }
}
